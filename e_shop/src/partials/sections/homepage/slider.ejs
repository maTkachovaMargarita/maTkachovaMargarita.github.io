<% const sliderItems = [{title: "Cowhide Standard Crew 1", text: "White coloured, short-sleeved, printed T-shirt for men by Levi's. This crew-neck T-shirt is made of organic cotton and comes in a regular fit.", img_url: "./img/slider-img.png"}, {title: "Cowhide Standard Crew 2", text: "White coloured, short-sleeved, printed T-shirt for men by Levi's. This crew-neck T-shirt is made of organic cotton and comes in a regular fit.", img_url: "./img/slider-img.png"}, {title: "Cowhide Standard Crew 3", text: "White coloured, short-sleeved, printed T-shirt for men by Levi's. This crew-neck T-shirt is made of organic cotton and comes in a regular fit.", img_url: "./img/slider-img.png"}, {title: "Cowhide Standard Crew 4", text: "White coloured, short-sleeved, printed T-shirt for men by Levi's. This crew-neck T-shirt is made of organic cotton and comes in a regular fit.", img_url: "./img/slider-img.png"}]%>

<section class="aditii-slider">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="bd-example">
					<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">

						<div class="carousel-inner">
							<% sliderItems.forEach((item, i) => { %>
							<div class="carousel-item">
								<div class="container-fluid">
									<div class="row justify-content-around">
										<div class="col-5">
											<div class="img-wrapper">
												<img src="<%= item.img_url%>" class="d-block w-100 carousel-item__img" alt="">
											</div>
										</div>
										<div class="col-5">
											<div class="carousel-description d-none d-md-block">
												<h5 class="carousel-description__title"><%= item.title%></h5>
												<p class="carousel-description__text"><%= item.text%></p>
												<a href="#" class="carousel-description__link">shop now</a>
											</div>
										</div>
									</div>
								</div>
							</div>
							<% }) %>
						</div>
						<a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
						<div class="row justify-content-end">
							<div class="col-6 bullets-wraper">
								<ol class="carousel-indicators">
									<% sliderItems.forEach((_, i) => {%>
									<li data-target="#carouselExampleCaptions" data-slide-to="<%= i %>" class="carousel-bullet"></li>
									<%})%>
								</ol>		
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>